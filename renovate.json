{
  "extends": ["config:base"],
  "baseBranches": ["develop"],
  "automerge": true,
  "major": { "automerge": false },
  "requiredStatusChecks": null,
  "packageRules": [
    {
      "packagePatterns": ["eslint"],
      "groupName": "eslint"
    },
    {
      "packagePatterns": ["@types/"],
      "groupName": "@types"
    },
    {
      "packageNames": ["lucide-react-native", "lucide-react"],
      "extends": ["schedule:weekly"]
    },
    {
      "packageNames": ["@aws-sdk/"],
      "extends": ["schedule:weekly"]
    },
    {
      "packageNames": ["pnpm", "node"],
      "matchPackageNames": ["node", "pnpm"],
      "enabled": false
    },
    {
      "matchPackagePrefixes": ["expo"],
      "enabled": false
    }
  ],
  "ignoreDeps": [
    "react",
    "react-dom",
    "@expo/config-plugins",
    "@react-email/components",
    "@react-native-async-storage/async-storage",
    "@react-native-community/datetimepicker",
    "@react-native-community/netinfo",
    "@sentry/react-native",
    "@shopify/flash-list",
    "expo-application",
    "expo-build-properties",
    "expo-constants",
    "expo-dev-client",
    "expo-device",
    "expo-file-system",
    "expo-font",
    "expo-image-picker",
    "expo-image",
    "expo-linking",
    "expo-localization",
    "expo-location",
    "expo-media-library",
    "expo-network",
    "expo-av",
    "expo-video-thumbnails",
    "expo-splash-screen",
    "expo-status-bar",
    "expo-system-ui",
    "expo-updates",
    "expo-web-browser",
    "react-native-purchases",
    "lucide-react-native",
    "react-native-gesture-handler",
    "react-native-ios-context-menu",
    "react-native-ios-utilities",
    "react-native-progress",
    "react-native-reanimated",
    "react-native-safe-area-context",
    "react-native-screens",
    "react-native-svg",
    "react-native-web",
    "react-native",
    "sharp",
    "tailwindcss"
  ]
}
