{
  "name": "@ramble/shared",
  "version": "1.0.0",
  "main": "./src/index.ts",
  "files": [
    "./src/index.ts"
  ],
  "scripts": {
    "lint:fix": "eslint --config .eslintrc.commit.js --fix --cache --ext .ts,.tsx src",
    "lint": "eslint --config .eslintrc.js --ext .ts,.tsx src",
    "prettier": "prettier --check src",
    "prettier:fix": "prettier --write src",
    "format": "pnpm run lint:fix && pnpm run prettier:fix",
    "typecheck": "tsc --noEmit"
  },
  "sideEffects": false,
  "dependencies": {
    "@ramble/database": "workspace:*",
    "tailwind-merge": "2.2.1"
  },
  "devDependencies": {
    "@ramble/eslint-config": "workspace:*",
    "@ramble/tailwind-config": "workspace:*",
    "@types/node": "18.19.8",
    "@typescript-eslint/eslint-plugin": "6.19.1",
    "@typescript-eslint/parser": "6.19.1",
    "eslint": "8.56.0",
    "prettier": "3.2.4",
    "typescript": "5.3.3"
  }
}
