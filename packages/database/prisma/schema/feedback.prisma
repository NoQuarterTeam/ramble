enum FeedbackType {
  ISSUE
  IDEA
  OTHER
}

model Feedback {
  id      String       @id @default(uuid())
  type    FeedbackType
  message String       @db.Text

  user   User?   @relation(fields: [userId], references: [id], onDelete: SetNull)
  userId String?

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
}
