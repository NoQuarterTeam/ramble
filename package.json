{
  "name": "@ramble/root",
  "private": true,
  "dependencies": {
    "turbo": "1.12.3"
  },
  "type": "commonjs",
  "devDependencies": {
    "prettier": "3.2.5",
    "prettier-plugin-tailwindcss": "0.5.11",
    "typescript": "5.3.3"
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "ci": "turbo run typecheck lint prettier",
    "lint": "turbo run lint",
    "fix": "turbo run lint:fix prettier:fix",
    "prettier": "turbo run prettier",
    "prettier:fix": "turbo run prettier:fix",
    "lint:fix": "turbo run lint:fix",
    "format": "turbo run lint:fix && turbo run prettier:fix",
    "typecheck": "turbo run typecheck",
    "db:generate": "turbo run db:generate"
  },
  "prisma": {
    "schema": "./packages/database/schema.prisma"
  },
  "packageManager": "pnpm@8.15.1",
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  },
  "pnpm": {
    "patchedDependencies": {
      "@turf/helpers@6.5.0": "patches/@turf__helpers@6.5.0.patch",
      "@turf/buffer@6.5.0": "patches/@turf__buffer@6.5.0.patch",
      "@turf/boolean-point-in-polygon@6.5.0": "patches/@turf__boolean-point-in-polygon@6.5.0.patch",
      "@turf/center@6.5.0": "patches/@turf__center@6.5.0.patch",
      "@turf/bbox@6.5.0": "patches/@turf__bbox@6.5.0.patch"
    }
  }
}
